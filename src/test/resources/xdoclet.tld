<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE taglib PUBLIC "-//Sun Microsystems, Inc.//DTD JSP Tag Library 1.2//EN" "http://java.sun.com/dtd/web-jsptaglibrary_1_2.dtd">

<taglib>

 <tlib-version>1.0</tlib-version>
<jsp-version>1.2</jsp-version>
<short-name>vavi</short-name>
<uri>http://www.vavi.com/taglib</uri>
<description>vavi のタグライブラリ</description>

   <tag>
      <name>echo</name>
      <tag-class>vavi.taglib.EchoTag</tag-class>
      <body-content>empty</body-content>

      <description><![CDATA[message 内容を表示]]></description>

      <attribute>
         <name>message</name>
         <required>true</required>
         <rtexprvalue>false</rtexprvalue>
         <description><![CDATA[Message to disaply]]></description>
      </attribute>
   </tag>
   <tag>
      <name>hello</name>
      <tag-class>vavi.taglib.HelloTag</tag-class>
      <body-content>empty</body-content>

      <description><![CDATA[「HelloWorld!」を表示]]></description>

   </tag>

</taglib>
